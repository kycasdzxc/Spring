<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">

	<bean class="edu.biz.aop4.MyAdvice" id="myAdvice" />
	<bean class="edu.biz.aop4.MyDependency" id="myDependency" />
	<bean class="edu.biz.aop4.MyBean" id="myBean" p:dependency-ref="myDependency" />
	
	<aop:config>
		<aop:pointcut expression="execution(* hello(..)) and args(intValue)" id="pc" />
		<aop:pointcut expression="execution(* g*(..))" id="pc2" />
		<aop:aspect ref="myAdvice">
			<aop:before method="simpleBefore" pointcut-ref="pc" />
			<aop:around method="simpleAround" pointcut-ref="pc2" />
			<aop:after-returning method="simpleAfter" pointcut-ref="pc2" />
		</aop:aspect>
		
		<aop:aspect ref="myAdvice">
			<aop:pointcut expression="execution(* hello(..)) and args(intValue)" id="pc3"/>
			<aop:before method="simpleBefore" pointcut-ref="pc3"/>
		</aop:aspect>
	</aop:config>
</beans>
